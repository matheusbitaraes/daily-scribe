# Daily Scribe Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_PATH=/data/digest_history.db
DB_TIMEOUT=30
DATA_PATH=./data

# API Keys and Authentication
GEMINI_API_KEY=your_gemini_api_key_here
SMTP_PASSWORD=your_smtp_password_here

# Caddy Configuration
DOMAIN=localhost
CADDY_ADMIN=0.0.0.0:2019

# Litestream Backup Configuration
LITESTREAM_ACCESS_KEY_ID=your_access_key_id
LITESTREAM_SECRET_ACCESS_KEY=your_secret_access_key
GCS_BUCKET=your_gcs_bucket_name
GCS_PATH=daily-scribe

# System Configuration
TZ=UTC
LOG_LEVEL=info
DEBUG=false

# Development Settings (uncomment for development)
# DEBUG=true
# LOG_LEVEL=debug
