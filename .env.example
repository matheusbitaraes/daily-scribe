# Daily Scribe Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_PATH=/data/digest_history.db
DB_TIMEOUT=30
DATA_PATH=./data

# API Keys and Authentication
# LLM summarization (free-tier first, OpenAI last): at least one required
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
# Optional free-tier providers (used before paid OpenAI)
# GROQ_API_KEY=your_groq_api_key_here
# DEEPSEEK_API_KEY=your_deepseek_api_key_here
# OPENROUTER_API_KEY=your_openrouter_api_key_here
# Optional local fallback
# OLLAMA_HOST=http://localhost:11434
# Override model for testing (e.g. ollama/llama3.1)
# LLM_MODEL_OVERRIDE=
SMTP_PASSWORD=your_smtp_password_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Email Service Configuration - DEPRECATED
EMAIL_PROVIDER=aws_ses
EMAIL_SMTP_SERVER=email-smtp.us-east-1.amazonaws.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your_aws_ses_username_here
EMAIL_SMTP_PASSWORD=your_aws_ses_password_here
EMAIL_AWS_REGION=us-east-1

# Email Addresses
EMAIL_FROM_EDITOR=editor@dailyscribe.news
EMAIL_FROM_ADMIN=admin@dailyscribe.news
EMAIL_FROM_SUPPORT=support@dailyscribe.news

# Email Settings
EMAIL_RATE_LIMIT=14
EMAIL_RETRY_ATTEMPTS=3
EMAIL_TIMEOUT=30

# Backup Settings (these override litestream.yml defaults if needed)
# LITESTREAM_SYNC_INTERVAL=10s
# LITESTREAM_SNAPSHOT_INTERVAL=1h
# LITESTREAM_RETENTION=720h

# System Configuration
TZ=UTC
LOG_LEVEL=info
DEBUG=false

# Elasticsearch Configuration
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=daily_scribe
ELASTICSEARCH_TIMEOUT=30
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_RETRY_ON_TIMEOUT=true

# Development Settings (uncomment for development)
# DEBUG=true
# LOG_LEVEL=debug
