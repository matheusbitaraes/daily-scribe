# Daily Scribe Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_PATH=/data/digest_history.db
DB_TIMEOUT=30
DATA_PATH=./data

# API Keys and Authentication
GEMINI_API_KEY=your_gemini_api_key_here
SMTP_PASSWORD=your_smtp_password_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Email Service Configuration - DEPRECATED
EMAIL_PROVIDER=aws_ses
EMAIL_SMTP_SERVER=email-smtp.us-east-1.amazonaws.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your_aws_ses_username_here
EMAIL_SMTP_PASSWORD=your_aws_ses_password_here
EMAIL_AWS_REGION=us-east-1

# Email Addresses
EMAIL_FROM_EDITOR=editor@dailyscribe.news
EMAIL_FROM_ADMIN=admin@dailyscribe.news
EMAIL_FROM_SUPPORT=support@dailyscribe.news

# Email Settings
EMAIL_RATE_LIMIT=14
EMAIL_RETRY_ATTEMPTS=3
EMAIL_TIMEOUT=30

# Backup Settings (these override litestream.yml defaults if needed)
# LITESTREAM_SYNC_INTERVAL=10s
# LITESTREAM_SNAPSHOT_INTERVAL=1h
# LITESTREAM_RETENTION=720h

# System Configuration
TZ=UTC
LOG_LEVEL=info
DEBUG=false

# Development Settings (uncomment for development)
# DEBUG=true
# LOG_LEVEL=debug
